{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "serve-development",
      "problemMatcher": [
        "$tsc",
        "$tslint5"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "npm",
      "script": "serve-production",
      "problemMatcher": [
        "$tsc",
        "$tslint5"
      ]
    },
    {
      "type": "npm",
      "script": "build",
      "problemMatcher": [
        "$tsc",
        "$tslint5"
      ]
    },
    {
      "type": "npm",
      "script": "lint",
      "problemMatcher": [
        "$tslint5"
      ]
    },
    {
      "type": "npm",
      "script": "show-coverage",
      "problemMatcher": []
    }
  ]
}
