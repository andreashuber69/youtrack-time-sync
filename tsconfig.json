{
  "compilerOptions": {
    // Compilation options
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "lib": [ "esnext", "dom", "dom.iterable", "scripthost" ],
    "moduleResolution": "node",
    "paths": {
      "@/*": [ "src/*" ]
    },
    "strict": true,
    "types": [
      "vuetify", // https://github.com/vuetifyjs/vue-cli-plugin-vuetify/issues/43#issuecomment-435088739
      "webpack-env",
    ],
    // Generation options
    "module": "esnext",
    "jsx": "preserve",
    "sourceMap": true,
    "target": "es5",
    "importHelpers": true,
    "esModuleInterop": true,
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
