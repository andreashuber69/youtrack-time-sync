{
  "compilerOptions": {
    "downlevelIteration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "lib": ["es2017", "dom", "dom.iterable"],
    "module": "es2015", // This only needs to be set explicitly because we can't currently upgrade "target"
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "sourceMap": true,
    "strict": true,
    // Attempts to configure karma for anything more recent than es5 failed.
    // TODO: Revist this once we've switched to Jest
    "target": "es5",
    "types": [
      "jasmine",
      "vuetify", // https://github.com/vuetifyjs/vue-cli-plugin-vuetify/issues/43#issuecomment-435088739
      "webpack-env"
    ]
  },
  "include": [
    "src/**/*.ts"
  ]
}
